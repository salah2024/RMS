@model LoginViewModel

@{
	ViewData["Title"] = "ورود به سیستم";
}

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="fa">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"]</title>
	<!-- لود فونت ایران‌سنس از Fontcdn -->
	<link href="https://cdn.fontcdn.ir/Font/Persian/IRANSans/IRANSans.css" rel="stylesheet" />

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
	<style>
		body {
			/* گرادینت سبز آبی */
			background: linear-gradient(135deg, #006F73, #8182ea, #007F7F); /* گرادینت سبز آبی */
			font-family: 'IRANSans', Arial, sans-serif;
			direction: rtl;
			margin: 0;
			padding: 0;
			height: 100vh; /* ارتفاع کامل صفحه */
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.3); /* افکت سایه برای صفحه */
		}

		.login-container {
			max-width: 400px;
			margin: 50px auto;
			background-color: #fff;
			padding: 30px;
			border-radius: 8px;
			box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
		}

		.login-header h1 {
			padding: 20px;
			font-size: 22px;
			margin-bottom: 20px;
		}

		.form-group {
			margin-bottom: 15px;
		}

		.login-btn {
			background-color: #007bff;
			color: white;
			width: 100%;
			padding: 10px;
			border: none;
			border-radius: 5px;
		}

			.login-btn:hover {
				background-color: #0056b3;
			}

		.footer-links {
			text-align: center;
			margin-top: 15px;
		}

			.footer-links a {
				color: #007bff;
			}

				.footer-links a:hover {
					text-decoration: underline;
				}

		/* تنظیمات برای چک‌باکس "مرا به خاطر بسپار" */
		.form-check {
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

		.form-check-label {
			margin-left: 10px;
			font-size: 14px;
		}
	</style>
</head>
<body>

	<div class="container">
		<!-- فرم ورود -->
		<div class="login-container">
			<!-- هدر داخل فرم -->
			<div class="login-header">
				<h1>به سامانه ساکار خوش آمدید</h1>
			</div>

			<form asp-action="Login" method="post">
				@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
				{
					<div class="alert alert-danger">
						@ViewData["ErrorMessage"]
					</div>
				}

				<div class="form-group">
					<label for="UserName">نام کاربری</label>
					<input type="text" id="UserName" name="UserName" class="form-control" required placeholder="نام کاربری خود را وارد کنید" value="@Model.UserName" />
				</div>

				<div class="form-group">
					<label for="Password">رمز عبور</label>
					<input type="password" id="Password" name="Password" class="form-control" required placeholder="رمز عبور خود را وارد کنید" />
				</div>

				<!-- چک‌باکس "مرا به خاطر بسپار" -->
				<div class="form-check mt-2 mb-3">
					<input type="checkbox" class="form-check-input" id="RememberMe" asp-for="RememberMe" />
					<label class="form-check-label" for="RememberMe">مرا به خاطر بسپار</label>
				</div>


				<button type="submit" class="login-btn">ورود به سیستم</button>
			</form>

			<div class="footer-links">
				<a href="#" class="text-decoration-none">رمز عبور خود را فراموش کرده‌اید؟</a> |
				<a href="/Account/Register" class="text-decoration-none">ثبت‌نام</a>
			</div>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
