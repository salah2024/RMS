        function GetUserName()
        {
            $.ajax({
                type: "Get",
                url: "/BaseInfo/GetUserName",
                data: JSON.stringify(''),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    var xmlDoc = $.parseXML(response);
                    var xml = $(xmlDoc);
                    tblUserName = xml.find("tblUserName");
                    $.each(tblUserName, function () {
                        $('#HDFUserName').val($(this).find("UserName").text());
                    });
                    if ($('#HDFUserName').val() == '') {
                        toastr.error('دسترسی نامعتبر', 'خطا');
                        window.location.href = '../User/LoginPage';
                    }
                    else
                        $('#divWaiting').hide();
                },
                error: function (response) {
                    toastr.error('خطا', 'خطا');
                }
            });
        }

        function Exit()
        {
            $.ajax({
                type: "POST",
                url: "/BaseInfo/SetViewBagEmpty",
                data: JSON.stringify(''),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response == "OK")
                        window.location.href = '../User/LoginPage';
                },
                error: function (response) {
                    toastr.error('خطا', 'خطا');
                }
            });
        }
